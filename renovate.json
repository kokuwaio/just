{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["kokuwaio/renovate-config"],
	"customManagers": [
		{
			"customType": "regex",
			"managerFilePatterns": ["README.md", "Dockerfile", ".woodpecker/build.yaml"],
			"matchStrings": [
				"kokuwaio/just:(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)",
				"casey/just/releases/download/(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)",
				"just-(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)-",
				"version: (?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)"
			],
			"datasourceTemplate": "github-releases",
			"packageNameTemplate": "casey/just"
		}
	]
}
